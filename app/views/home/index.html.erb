<h1>Welcome to the Pizza App</h1>
<p>Find me in app/views/home/index.html.erb</p>


<h1>Pizzas</h1>
<%= link_to 'New Pizza', new_pizza_path %>
<ul>
  <% if @pizzas.any? %>
    <% @pizzas.each do |pizza| %>
      <li>
        <%= link_to pizza.name, pizza_path(pizza) %> 
        <%= link_to 'Edit', edit_pizza_path(pizza) %> |
        <%= link_to 'Destroy', pizza_path(pizza), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  <% else %>
    <p>No pizzas found. <%= link_to 'Create one', new_pizza_path %></p>
  <% end %>
</ul>
