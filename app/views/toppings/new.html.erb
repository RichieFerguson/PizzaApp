<h1>New Topping</h1>

<%= form_with model: @topping, local: true do |form| %>
  <div>
    <%= form.label :name, "Topping Name" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit 'Create Topping' %>
  </div>
<% end %>

<%= link_to 'Back to Toppings', toppings_path %>
<%= link_to 'Back to Home', root_path, class: 'btn btn-primary' %>
