<h1>All Toppings</h1>

<%= link_to 'New Topping', new_topping_path %>

<ul>
  <% @toppings.each do |topping| %>
    <li>
      <%= topping.name %>
      <%= link_to 'Edit', edit_topping_path(topping) %> |
      <%= link_to 'Delete', topping_path(topping), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Pizzas', pizzas_path %>
<%= link_to 'Back to Home', root_path, class: 'btn btn-primary' %>

