<div class="container my-5">
  <h1 class="mb-4">Edit Topping</h1>

  <div class="card p-4 shadow">
    <%= form_with model: @topping, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :name, "Topping Name", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mt-3">
        <%= form.submit "Update Topping", class: "btn btn-primary" %>
        <%= link_to "Cancel", toppings_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
